            -moz-box-shadow: -3px 3px 10px -5px rgba(248,174,107,1);
            box-shadow: -3px 3px 10px -5px rgba(248,174,107,1);
         }
         30% {
            -webkit-box-shadow: -5px 0px 10px -5px rgba(248,174,107,1);
            -moz-box-shadow: -5px 0px 10px -5px rgba(248,174,107,1);
            box-shadow: -5px 0px 10px -5px rgba(248,174,107,1);
