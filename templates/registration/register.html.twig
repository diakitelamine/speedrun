      @keyframes hoverEffect {
          from {
            -webkit-box-shadow: 0px 5px 10px -5px rgba(248,174,107,1);
            -moz-box-shadow: 0px 5px 10px -5px rgba(248,174,107,1);
            box-shadow: 0px 5px 10px -5px rgba(248,174,107,1);
