{% extends 'base.html.twig' %}

{% block title %}Exercice index{% endblock %}

{% block body %}
    <h1>Exercice index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Serie</th>
                <th>Repetition</th>
                <th>Repos</th>
                <th>TempsTotal</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exercice in exercices %}
            <tr>
                <td>{{ exercice.id }}</td>
                <td>{{ exercice.nom }}</td>
                <td>{{ exercice.serie }}</td>
                <td>{{ exercice.repetition }}</td>
                <td>{{ exercice.repos }}</td>
                <td>{{ exercice.tempsTotal }}</td>
                <td>{{ exercice.description }}</td>
                <td>
                    <a href="{{ path('exercice_show', {'id': exercice.id}) }}">show</a>
                    <a href="{{ path('exercice_edit', {'id': exercice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('exercice_new') }}">Create new</a>
{% endblock %}
